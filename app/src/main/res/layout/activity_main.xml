<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    tools:context="com.examplel.awesome_men.yuewen.Activitys.MainActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/home_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <LinearLayout
        android:background="@color/gray2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <com.examplel.awesome_men.yuewen.CusViews.TabButton
            android:id="@+id/tab1"
            android:layout_weight="1"
            android:layout_width="@dimen/middleBarHeight"
            android:layout_height="@dimen/middleBarHeight">
        </com.examplel.awesome_men.yuewen.CusViews.TabButton>

        <com.examplel.awesome_men.yuewen.CusViews.TabButton
            android:id="@+id/tab2"
            android:layout_weight="1"
            android:layout_width="@dimen/middleBarHeight"
            android:layout_height="@dimen/middleBarHeight">
        </com.examplel.awesome_men.yuewen.CusViews.TabButton>
        <com.examplel.awesome_men.yuewen.CusViews.TabButton
            android:id="@+id/tab3"
            android:layout_weight="1"
            android:layout_width="@dimen/middleBarHeight"
            android:layout_height="@dimen/middleBarHeight">
        </com.examplel.awesome_men.yuewen.CusViews.TabButton>
        <com.examplel.awesome_men.yuewen.CusViews.TabButton
            android:id="@+id/tab4"
            android:layout_weight="1"
            android:layout_width="@dimen/middleBarHeight"
            android:layout_height="@dimen/middleBarHeight">
        </com.examplel.awesome_men.yuewen.CusViews.TabButton>

    </LinearLayout>


</LinearLayout>
