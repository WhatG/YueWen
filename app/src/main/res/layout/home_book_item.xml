<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="10dp"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >


    <LinearLayout
        android:id="@+id/book_item_info"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@color/white"
            android:id="@+id/book_item_bimage"
            android:layout_height="100dp"
            android:layout_width="80dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/booksample"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/book_item_bname"
                android:padding="2dp"
                android:text="高斯转"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_author"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:id="@+id/book_item_bauthor"
                    android:text="沈永欢"
                    android:textColor="#515151"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_public"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:id="@+id/book_republic"
                    android:text="机械工业出版社"
                    android:textColor="#515151"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/roundrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="2dp"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_person1"
                android:layout_marginRight="5dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/book_item_uicon"/>

            <TextView
                android:textColor="@color/gray7"
                android:id="@+id/book_item_uname"
                android:text="longer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="2dp"
                android:id="@+id/book_item_licon"
                android:src="@drawable/ic_location"
                android:layout_width="15dp"
                android:layout_height="15dp"/>

            <TextView
                android:id="@+id/book_item_loc"
                android:textColor="#515151"
                android:text="杭州市"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>