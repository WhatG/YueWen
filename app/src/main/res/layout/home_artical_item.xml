<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:paddingTop="12dp"
              android:paddingBottom="0dp"
              android:background="@color/white"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:orientation="vertical">
    <TextView
        android:id="@+id/artical_item_title"
        android:textStyle="bold"
        android:textSize="@dimen/bigTextSize"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/artical_item_icon"
            android:layout_marginRight="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/artical_item_username"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/artical_item_time"
                android:textSize="@dimen/smallTextSize"
                android:textColor="#515151"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:padding="5dp"
        android:background="@drawable/roundreact_grey"
        android:id="@+id/artical_item_desc"
        android:textSize="@dimen/middleTextSize"
        android:textColor="#515151"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>



</LinearLayout>